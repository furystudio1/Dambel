                android:layout_toRightOf="@+id/im_setting_alarm_6"
                android:id="@+id/checkBox_Sit_alarm_sham"
                android:checked="true"
                android:layout_centerVertical="true"
                android:text="@string/setting_alarm_6"
                android:textSize="20dp"
                android:textColor="@color/text_setting" />

        </com.andexert.library.RippleView>

    </RelativeLayout>

    <com.android.fury.Dambel.Font_text.Font
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_notification"
        android:id="@+id/txt_sit_title"
        android:layout_alignBottom="@+id/btn_sit_background"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/text_setting"/>

    <com.android.fury.Dambel.Font_text.Font
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_notification_why"
        android:id="@+id/txt_sit_why"
        android:layout_below="@+id/lin_setting_alarm_6"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/text_setting"/>


</RelativeLayout>