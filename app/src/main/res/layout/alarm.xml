                android:layout_marginRight="15dp"
                android:src="@drawable/alarm_check_on" />

            <android.support.v7.widget.SwitchCompat
                android:key="sobhane_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/im_setting_alarm_5"
                android:id="@+id/checkBox_Sit_alarm_sport"
                android:checked="true"
                android:layout_centerVertical="true"
                android:text="@string/setting_alarm_5"
                android:textSize="20dp"
                android:textColor="@color/text_setting" />

        </com.andexert.library.RippleView>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/lin_setting_alarm_6"
        android:layout_below="@+id/lin_setting_alarm_5"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="30dp">

        <com.andexert.library.RippleView
            android:id="@+id/more055"
            android:layout_width="wrap_content"
