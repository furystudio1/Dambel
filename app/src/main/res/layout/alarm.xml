            rv_centered="true">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/im_setting_alarm_3"
                android:layout_marginRight="15dp"
                android:src="@drawable/alarm_check_on" />

            <android.support.v7.widget.SwitchCompat
                android:key="sobhane_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/im_setting_alarm_3"
                android:id="@+id/checkBox_Sit_alarm_nahar"
                android:checked="true"
                android:layout_centerVertical="true"
                android:text="@string/setting_alarm_3"
                android:textSize="20dp"
                android:textColor="@color/text_setting" />

        </com.andexert.library.RippleView>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/lin_setting_alarm_4"
        android:layout_below="@+id/lin_setting_alarm_3"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="30dp">

        <com.andexert.library.RippleView
            android:id="@+id/more053"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_color="@color/color30day"
            rv_centered="true">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/im_setting_alarm_4"
                android:layout_marginRight="15dp"
                android:src="@drawable/alarm_check_on" />

            <android.support.v7.widget.SwitchCompat
                android:key="sobhane_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/im_setting_alarm_4"
                android:id="@+id/checkBox_Sit_alarm_myanvade_2"
                android:checked="true"
                android:layout_centerVertical="true"
                android:text="@string/setting_alarm_4"
                android:textSize="20dp"
                android:textColor="@color/text_setting" />

        </com.andexert.library.RippleView>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/lin_setting_alarm_5"
        android:layout_below="@+id/lin_setting_alarm_4"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="30dp">

        <com.andexert.library.RippleView
            android:id="@+id/more054"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_color="@color/color30day"
            rv_centered="true">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
