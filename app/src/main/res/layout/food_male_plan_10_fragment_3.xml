<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp"
        app:cardBackgroundColor="@color/color30day">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food_male_plan_10_34"
            android:id="@+id/txt_food_body_1"
            android:textColor="@color/text_color_1"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
            <com.andexert.library.RippleView
                android:id="@+id/more014"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_food_body_1"
                android:layout_marginTop="20dp"
                rv_color="@color/color30day"
                rv_zoom="true"
                app:rv_centered="true"
                android:layout_centerHorizontal="true"
                app:rv_type="doubleRipple">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_food_body_1"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_centerHorizontal="true"
                app:cardPreventCornerOverlap="false"
                app:cardBackgroundColor="@color/color30day">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/food_male_plan_10_35"
                    android:textColor="@color/text_color_2"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>
            </com.andexert.library.RippleView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>