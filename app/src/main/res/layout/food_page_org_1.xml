<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_sport"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <RelativeLayout
                android:id="@+id/alakiha_23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lin_food_mp_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/rl_food_day_1"
                        android:layout_width="@dimen/food_org"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/rl_food_day_1_1"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circle_food_day_off">


                            <com.android.fury.Dambel.Font_text.Font
                                android:id="@+id/txt_food_day_1_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/food_day_10_3"
                                android:textColor="@color/color30day"
                                android:textSize="80dp" />

                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_food_day_2"
                        android:layout_width="@dimen/food_org"
                        android:layout_height="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/rl_food_day_2_1"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circle_food_day_off">

                            <com.android.fury.Dambel.Font_text.Font
                                android:id="@+id/txt_food_day_2_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/food_day_10_3_2"
                                android:textColor="@color/color30day"
                                android:textSize="80dp" />

                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_food_day_3"
                        android:layout_width="@dimen/food_org"
                        android:layout_height="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/rl_food_day_3_1"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circle_food_day_off">


                            <com.android.fury.Dambel.Font_text.Font
                                android:id="@+id/txt_food_day_3_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/food_day_10_3_3"
                                android:textColor="@color/color30day"
                                android:textSize="80dp" />

                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>
