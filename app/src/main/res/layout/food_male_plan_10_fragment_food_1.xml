<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_food_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp"
        app:cardBackgroundColor="@color/text_color_2">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center_horizontal">

<com.android.fury.Dambel.Font_text.Font
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txt_male_plan_10_food_1"
    android:textColor="@color/color30day"
    android:textSize="20dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="15dp"
    android:text="name food"/>

        <com.android.fury.Dambel.Font_text.Font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_male_plan_10_1_2"
            android:textColor="@color/color30day"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_male_plan_10_food_1"
            android:layout_marginTop="20dp"
            android:text="@string/food_male_plan_10_food_1_i"/>

        <com.android.fury.Dambel.Font_text.Font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_male_plan_10_food_2"
            android:textColor="@color/background_sport"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_male_plan_10_1_2"
            android:layout_marginTop="15dp"
            android:text="ss"
            android:layout_marginBottom="20dp"/>



      </RelativeLayout>


    </android.support.v7.widget.CardView>



</FrameLayout>