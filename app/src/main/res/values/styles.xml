<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="themeapp" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">#D4D2D2</item>
        <item name="android:colorAccent">#ffffff</item>

        <item name="android:editTextStyle">@style/App_EditTextStyle</item>

    </style>

    <style name="start_1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">#363636</item>
    </style>

    <style name="start_2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">#bfa02c</item>
    </style>

    <style name="about" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">#363636</item>
    </style>

    <style name="setting" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">#20323D</item>
    </style>

    <style name="music" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">#363636</item>
    </style>

    <style name="sport_end" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">#bfa02c</item>
    </style>

    <style name="not_net" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">#bfa02c</item>
        <item name="android:colorButtonNormal">#bfa02c</item>
    </style>

    <style name="sport_me_start" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">#707070</item>
    </style>

    <style name="nov_meal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">#D4D2D2</item>
    </style>

    <style name="suport" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="page_start" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>

    <style name="login" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">#D4D2D2</item>
        <item name="android:colorAccent">#ffffff</item>
    </style>

    <style name="MyHintStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/color30day</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color30day_hide</item>
        <item name="colorControlActivated">@color/color30day</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#D4D2D2</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FDFDFE</item>
        <!-- Used for the background -->
        <item name="android:background">#bfa02c</item>
    </style>

    <style name="MyAlertDialogStyle_clean" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#a4faff</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#DAFBFD</item>
        <!-- Used for the background -->
        <item name="android:background">#597E8F</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">#bfa02c</item>
    </style>

    <style name="themeapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="themeapp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="ToolTipLayoutCustomStyle">
        <item name="ttlm_padding">25dip</item>
        <item name="ttlm_strokeColor">#bfa02c</item>
        <item name="ttlm_backgroundColor">#d6e6e9ed</item>
        <item name="android:textAppearance">@style/textcolor_s</item>
        <item name="ttlm_strokeWeight">1dip</item>
        <item name="ttlm_cornerRadius">8dip</item>
        <item name="ttlm_overlayStyle">@style/ToolTipOverlayCustomStyle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textcolor_s">
        <item name="android:color">#bfa02c</item>
        <item name="android:textColor">#bfa02c</item>
    </style>

    <style name="ToolTipOverlayCustomStyle">
        <item name="android:color">#bfa02c</item>
        <item name="ttlm_repeatCount">999</item>
        <item name="ttlm_duration">400</item>
    </style>

</resources>